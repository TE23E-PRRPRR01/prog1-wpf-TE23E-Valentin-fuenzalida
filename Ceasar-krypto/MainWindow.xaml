<Window x:Class="Ceasar_krypto.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Ceasar_krypto"
    mc:Ignorable="d"
    Title="MainWindow" Height="450" Width="800"
    SizeToContent="WidthAndHeight">
    <StackPanel Margin="10"> 
    <Label>Ceasarkrypto</Label>
    <Label Margin="5">Ange en text</Label>
    <TextBox Name="tbxText" Margin="10" Width="200"></TextBox>
    <Label>Ange en nyckel (1-9)</Label>
    <TextBox Name="tbxNyckel" Width="200"></TextBox>
    <Button Click="btnKör">Kör</Button>
    <Label>Texten krypterad</Label>
    <TextBox Name="tbxResultat" IsReadOnly="true" Width="200" TextWrapping="wrap"></TextBox>
    </StackPanel>
</Window>