<Window x:Class="SlumpTalApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:SlumpTalApp"
    mc:Ignorable="d"
    Title="MainWindow" Height="250" Width="300"
    Background="#EEE"
    SizeToContent="WidthAndHeight"
    MinHeight="200" MinWidth="300"
    MaxHeight="600" MaxWidth="350">
    <StackPanel Margin="20">
        <Label Background="White" Foreground="Black" Margin="10">Slumpa fram ett tal</Label>

    <Label>Ange
    maxgräns</Label>
    <TextBox Name="txbMaxvärde" TextAlignment="Center" FontSize="40"
            Background="Yellow" Foreground="Black" BorderThickness="2" Margin="10"></TextBox>

    <Button
            Click="SlumpaTal" Background="LightGreen" Margin="10">Slumpa tal</Button>

    <TextBox
            Name="txbResultat" TextAlignment="Center" IsReadOnly="True" FontSize="40"
            Background="Purple" Foreground="Black" BorderThickness="2" Margin="10"></TextBox>

    <TextBox
            Name="txbEj" TextAlignment="Center" IsReadOnly="True" FontSize="20" Background="Brown"
            Foreground="Black" BorderThickness="2" Margin="10"></TextBox>

    <Label>Slumpa fram tio tal</Label>
    <Button
            Click="SlumpaTioTal" Background="Blue" Foreground="White" Margin="10">Slumpa tio tal</Button>

            <ListBox Name="txbFlerResultat" FontSize="20" Background="Red" Foreground="White"></ListBox>
    </StackPanel>

</Window>