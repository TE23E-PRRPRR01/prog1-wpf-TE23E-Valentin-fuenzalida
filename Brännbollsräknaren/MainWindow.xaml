<Window x:Class="Brännbollsräknaren.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Brännbollsräknaren"
    mc:Ignorable="d"
    Title="MainWindow" Height="450" Width="800"
    MinHeight="350" MinWidth="370" SizeToContent="WidthAndHeight"
    MaxHeight="500" MaxWidth="520">
    <StackPanel Margin="10">
        <Label>Brännbollsräknaren</Label>
        <StackPanel Orientation="Horizontal" Margin="10">
            <Label>Lag inne:</Label>
            <TextBox Name="tbxLagInne" Width="100"></TextBox>
            <Label>Lag ute</Label>
            <TextBox Name="tbxLagUte" Width="100"></TextBox>
        </StackPanel>
        <StackPanel
            Orientation="Horizontal" Margin="10">
            <Button Click="KlickFrivarv" Width="100">Frivarv</Button>
            <Button Click="KlickBränning" Width="100">Bränning</Button>
            <Button Click="KlickLyra" Width="100">Lyra</Button>
            <Button Click="KlickVarv" Width="100">Varv</Button>
        </StackPanel>
        <Label>Historik</Label>
        <TextBox Name="tbxHistorik" Height="100" AcceptsReturn="True" TextWrapping="WrapWithOverflow" VerticalScrollBarVisibility="auto" IsReadOnly="True"></TextBox>
    </StackPanel>
</Window>