<Window x:Class="Uppgift._2.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Uppgift._2"
    mc:Ignorable="d"
    Title="MainWindow" Height="450" Width="600"
    SizeToContent="WidthAndHeight">

    <StackPanel Margin="10">
    <Label>Enkel miniräknare</Label>

    <StackPanel Orientation="Horizontal">
    <Label>Tal 1</Label>
    <TextBox Name="tbxtal1" Width="200"></TextBox>
    </StackPanel>
    <StackPanel Orientation="Horizontal">
    <Label>Tal 2</Label>
    <TextBox Name="tbxtal2" Width="200"></TextBox>
    </StackPanel>

    <DockPanel HorizontalAlignment="Stretch" Margin="10">
    <Button Click="btnRäkna" Name="plus" Width="50" Margin="5">+</Button>
    <Button Click="btnRäkna" Name="minus" Width="50" Margin="5">-</Button>
    <Button Click="btnRäkna" Name="multi" Width="50" Margin="5">*</Button>
    <Button Click="btnRäkna" Name="divi" Width="50" Margin="5">/</Button>
    </DockPanel>
    <Label>Resultat</Label>
    <TextBox Name="tbxResultat"></TextBox>
    </StackPanel>
</Window>