<Window x:Class="Uppgift._6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uppgift._6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        SizeToContent="WidthAndHeight">
<StackPanel Margin="10">
<Label>Löpande medelvärde</Label>

<StackPanel Orientation="Horizontal" Margin="10">
<Label>Ange tal</Label>
<TextBox Name="tbxTal" Width="200"></TextBox>
</StackPanel>

<Button Click="btnAddera">Addera</Button>

<StackPanel Orientation="Horizontal">
<Label>Summa</Label>
<TextBox Name="tbxSumma" IsReadOnly="true" Width="200"></TextBox>
</StackPanel>

<StackPanel Orientation="Horizontal">
<Label>Medelvärdet</Label>
<TextBox Name="tbxMedelvärdet" IsReadOnly="true" Width="200"></TextBox>
</StackPanel>

</StackPanel>
</Window>
