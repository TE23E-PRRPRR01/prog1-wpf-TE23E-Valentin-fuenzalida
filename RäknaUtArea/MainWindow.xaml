<Window x:Class="RäknaUtArea.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:RäknaUtArea"
    mc:Ignorable="d"
    Title="MainWindow" Height="300" Width="250"
    SizeToContent="WidthAndHeight"
    MaxHeight="500" MaxWidth="300"
    MinHeight="400" MinWidth="200">
    <StackPanel Margin="20">

        <Label Background="Red" Foreground="Black" FontFamily="Bold" FontSize="15" Margin="10">Ange bredd</Label>
        <TextBox Name="txbBredd"></TextBox>

        <Label Background="Green" Foreground="Purple" FontFamily="Bold" FontSize="15" Margin="10">Ange höjd</Label>
        <TextBox
            Name="txbHöjd"></TextBox>

         <Button Click="KlickRäknaUt" Background="LightBlue" Margin="10">
    Räkna ut </Button>

        <Label>Area</Label>
        <TextBox Name="txbArea" IsReadOnly="true"></TextBox>

        <Button Click="KlickRensa" Background="Purple" Margin="10"></Button> 

    </StackPanel>
</Window>