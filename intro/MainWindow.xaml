<Window x:Class="intro.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:intro"
    mc:Ignorable="d"
    Title="intro" Height="450" Width="400"
    MinHeight="200" MinWidth="200"
    MaxHeight="500" MaxWidth="600"
    SizeToContent="WidthAndHeight"
    Background="#69FA7C">
    <StackPanel Margin="10">
        <Label Margin="5" FontSize="30px" FontWeight="bold">Hej världen!!</Label>
        <StackPanel Orientation="Horizontal">
            <Label Margin="5" Foreground="#000000" FontSize="15">Ange namn: </Label>
            <TextBox Margin="5" Width="80"></TextBox>
        </StackPanel>
        <Button
            Background="#FA7469" FontSize="20px" Padding="10" FontWeight="bold">Klicka mig</Button>
    </StackPanel>
</Window>