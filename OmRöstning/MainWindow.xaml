<Window x:Class="OmRöstning.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:OmRöstning"
    mc:Ignorable="d"
    Title="Omröstning" Height="600" Width="800"
    Background="Gray">

    <StackPanel Margin="20"> 
    <Image Source="bilder/mello.png" Width="200" Margin="0,0,0,10"></Image>
    <Label>Vilken är din favoritlåt</Label>

    <Button Name="röd" Click="KlickRösta" Background="Red" Foreground="Black">Röd</Button>
    <Button Name="blå" Click="KlickRösta" Background="Blue" Foreground="Black">Blå</Button>
    <Button Name="grön" Click="KlickRösta" Background="Green" Foreground="Black">Grön</Button>
    <Button Name="lila" Click="KlickRösta" Background="Purple" Foreground="Black">Lila</Button>
    <Button Name="gul" Click="KlickRösta" Background="Yellow" Foreground="Black">Gul</Button>
    <Button Name="brun" Click="KlickRösta" Background="Brown" Foreground="Black">Brun</Button>

    <Label>Antal röster</Label>
    <TextBox Name="txbResultat" IsReadOnly="true"></TextBox>

    <Label>Återställ röster</Label>
    <Button Name="Rensa" Click="KlickRensa" Height="20" Background="Black" Foreground="White">Återställ</Button>
    </StackPanel>
</Window>